{
    "name": "@flowlance/flowlance",
    "private": true,
    "type": "module",
    "scripts": {
        "dev:backend": "bun run --cwd ./apps/backend --env-file ../../.env dev",
        "build:backend": "bun run --cwd ./apps/backend --env-file ../../.env build",
        "types": "bun tsc --build --verbose",
        "lint": "bun run eslint --cache --ext .js,.jsx,.ts,.tsx .",
        "cli": "bun run --cwd ./apps/backend --env-file ../../.env src/command/cli.ts",
        "mikro-orm": "bun run --cwd ./apps/backend --env-file ../../.env mikro-orm"
    },
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not ie <= 11",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "dependencies": {
        "typescript": "^5.6.2",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.2",
        "@types/bun": "1.2.8",
        "@types/express": "^4.17.21",
        "@types/pg": "^8.11.6",
        "@types/uuid": "^10.0.0",
        "@typescript-eslint/eslint-plugin": "^6.2.0",
        "@typescript-eslint/parser": "^6.2.0",
        "@typescript/analyze-trace": "^0.10.1",
        "eslint": "^8.54.0",
        "uuid": "^10.0.0"
    }
}
