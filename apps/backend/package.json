        "@mikro-orm/postgresql": "^6.4.9",
        "@mikro-orm/reflection": "^6.4.9",
        "bcrypt": "^5.1.1",
        "commander": "^12.1.0",
        "express": "^4.19.2",
        "pg": "^8.12.0"
    },
    "devDependencies": {
        "ajv": "^8.17.1"
    }
}
