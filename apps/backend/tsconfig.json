{
    "extends": "../../tsconfig.options.json",
    "compilerOptions": {
        /* Monorepo setup */
        "outDir": "./dist",
        // This is an app so it should have disabled emits. However, the frontend app needs to have access to the router, so ...
        "emitDeclarationOnly": true,

        /* Features */
        "lib": [
            "ESNext",
            "DOM"
        ],
        "jsx": "react-jsx",
        "resolveJsonModule": true,

        "baseUrl": ".",
        "paths": {
            ":backend/*": [ "./src/*" ],
            ":static/*": [ "../../packages/static/*" ],
            ":env": [ "../../packages/env/env.ts" ],
        },
    },
    "include": [
        "src",
        "tests",
        "index.ts",
        // See https://github.com/TypeStrong/ts-loader/issues/905 (it's marked as closed but it's still an issue).
        "./src/**/*.json",
    ],
    "references": [
        {
            "path": "../../packages/env",
        },
    ],
}
